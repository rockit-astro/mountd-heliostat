{
  "daemon": "warwick_heliostat_mount",
  "log_name": "mountd@heliostat",
  "control_machines": ["WarwickTCS", "WarwickHeliostatDome"],
  "serial_port": "/dev/serial/by-id/usb-Klipper_rp2040_5044340310254C1C-if00",
  "serial_baud": 250000,
  "latitude": 52.376861,
  "longitude": -1.583861,
  "altitude": 94,
  "connect_timeout": 10,
  "home_timeout": 60,
  "move_timeout": 90,
  "controller_fan": {
    "pin": "gpio20",
    "idle_timeout": 30
  },
  "neopixel": {
    "pin": "gpio24",
    "count": 60
  },
  "interfaces": {
    "tmc_uart": {
      "type": "tmc2209",
      "uart_pin": "gpio9",
      "tx_pin": "gpio8"
    }
  },
  "ha": {
    "step_pin": "gpio11",
    "dir_pin": "!gpio10",
    "enable_pin": "!gpio12",
    "endstop_pin": "^gpio4",
    "endstop_pos": "min",
    "rotation_microsteps": 6400,
    "rotation_distance": 1,
    "position_min": -90,
    "position_max": 90,
    "speed": 2.5,
    "acceleration": 1,
    "homing_backoff": 1,
    "tracking_cadence": 0.1,
    "tracking_commit_buffer": 0.5,
    "interface": "tmc_uart",
    "uart_address": 0,
    "uart_microsteps": 32,
    "uart_run_current": 0.8
  },
  "dec": {
    "step_pin": "gpio6",
    "dir_pin": "gpio5",
    "enable_pin": "!gpio7",
    "endstop_pin": "^gpio3",
    "endstop_pos": "min",
    "rotation_microsteps": 3200,
    "rotation_distance": 8,
    "position_min": -35.5,
    "position_max": 95,
    "speed": 5,
    "acceleration": 2,
    "homing_backoff": 1,
    "tracking_cadence": 0.5,
    "tracking_commit_buffer": 0.5,
    "interface": "tmc_uart",
    "uart_address": 2,
    "uart_microsteps": 16,
    "uart_run_current": 1.0
  },
  "focus": {
    "step_pin": "gpio19",
    "dir_pin": "!gpio28",
    "enable_pin": "!gpio2",
    "endstop_pin": "^!gpio25",
    "endstop_pos": "min",
    "rotation_microsteps": 3200,
    "rotation_distance": 8,
    "position_min": 0,
    "position_max": 900,
    "speed": 10,
    "acceleration": 1,
    "homing_backoff": 1,
    "tracking_cadence": 0.25,
    "tracking_commit_buffer": 0.25,
    "interface": "tmc_uart",
    "uart_address": 1,
    "uart_microsteps": 16,
    "uart_run_current": 0.8
  },
  "park_positions": {
    "zenith": {
      "desc": "pointing directly up",
      "ha": 0,
      "dec": 52.4
    },
    "stow": {
      "desc": "positioned near the home markers",
      "ha": -85,
      "dec": -30
    }
  }
}
